/*=============== CUSTOM VARIABLES ==============*/
$fontSizeBase: 16px;
$fontSizeIcon: 28px;
$fontSizeTitle: 24px;
$fontFamily: Arimo, sans-serif;
$colorTitle: #263238;
$colorLinkHover: #bfa588;
$activeColorItem: #bfa588;
$borderColor: #e1e1e1;
$borderColorFocus: #999;
$backgroundMegaMenu: #f4f4f4;

/*=============== CUSTOM MIXINS ==============*/

@mixin baseLink {
  @include transition(all 0.3s ease-in-out);
  &:hover,
  &:active,
  &:focus {
    color: $colorLinkHover;
    opacity: 1;
    text-decoration: none;
  }
}

//properties
@mixin transition($args...) {
  -webkit-transition: $args;
  -moz-transition: $args;
  -ms-transition: $args;
  -o-transition: $args;
  transition: $args;
}

@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  border-radius: $radius;
}

@mixin padding($top, $right, $bottom, $left) {
  padding-top: $top;
  padding-right: $right;
  padding-bottom: $bottom;
  padding-left: $left;
}

@mixin text-align($value) {
  -webkit-text-align: $value;
  -moz-text-align: $value;
  text-align: $value;
}

body {
  font-family: $fontFamily;
}

h2 {
  font-family: $fontFamily;
  color: $colorTitle;
  font-size: 24px;
  font-weight: 400;
  text-transform: capitalize;
}

a {
  @include baseLink;
}

button {
  &:focus {
    outline: none;
  }
}

/*=============== HEADER SECTION ==============*/
.site-nav__link {
  text-transform: uppercase;
  @include baseLink;
}

.custom-icon-cart,
.custom-icon-search,
.site-header__cart {
  @extend .site-nav__link;
}

.custom-icon {
  width: 30px;
  height: 30px;
}

.button.custom-search {
  padding: 0 6px;
}

.site-header__logo-image {
  &:hover {
    opacity: 1;
  }
}

/*-------- Search form ---------*/

.site-header-search {
  position: absolute;
  top: 10px;
}

.form-search-header {
  position: absolute;
  width: 0;
  height: 0;
  opacity: 0;
  z-index: -2;
  @include transition(width 0.3s linear, opacity 0.3s linear, z-index 0.3s linear);
}

.search-click {
  position: absolute;
  cursor: pointer;
  width: 40px;
  height: 40px;
  z-index: 2;
  @include transition(all 0.3s ease-in-out);
  &.open-search-form {
    opacity: 0;
    & + .form-search-header {
      width: 300px;
      height: 40px;
      z-index: 3;
      opacity: 1;
      .search-button-submit {
        left: 255px;
        &:focus {
          outline: none;
        }
      }
    }
  }
}

.search-button-submit svg {
  width: 29px;
  height: 23px;
}

.search-input {
  width: 100%;
  border: 1px solid $borderColor;
  @include border-radius(4px);
  @include transition(border-color 0.3s linear);
  &:focus {
    border-color: $borderColorFocus;
    outline: none;
  }
}

.search-button-submit {
  position: absolute;
  left: 0;
  top: 7px;
  background: #fff;
  border: none;
  transition: left 0.3s linear;
}

.grid--no-gutters .grid__item {
  padding-bottom: 33px;
}

/*----------------- Menu Navigation ----------------*/
nav.main-navigation {
  position: relative;
  border-bottom: none;
}
.small-menu{
  position: relative;
  @include text-align(left);
}

.site-nav {
  margin: 0;
  padding: 0;
  .link-main {
    text-transform: uppercase;
    padding: 0 10px;
  }
  .navigation-link {
    display: inline-block;
    min-height: 54px;
    @include transition(all .3s linear);
    &.nav-has-dropdown {
      &:hover {
        .container-level-1 {
          display: block;
          &.only-one-level{
            min-width: 140px;
            padding: 20px 20px;
          }
        }
      }
    }
    .container-level-1 {
      display: none;
      position: absolute;
      top: 54px;
      left: 0;
      border: 1px solid #e1e1e1;
      background: #f4f4f4;
      z-index: 1;
      width: 100%;
      padding: 42px 23px;
      @include transition(all .9s linear)
    }
  }
  .nav-has-dropdown {
    .col-in-drop-level-1 {
      width: 33.3%;
      float: left;
    }
    .nav-dropdown-container {
      display: none;
    }
    &:hover {
      .nav-dropdown-container {
        .nav-dropdown {
          width: auto;
        }
      }
      .nav-dropdown {
          width: auto;
      }
    }
  }
  .header-links-in-level-1 {
    color: $colorTitle;
    font-size: $fontSizeTitle;
  }
  .col-in-drop-level-1 {
    width: auto;
    padding: 0 15px;
    @include text-align(left);
  }
  .link-in-level-1 {
    margin: 10px 0 0 0;
  }
  .link-to-page {
    color: $colorLinkHover;
    @include transition(all 0.5 linear);
    padding: 0;
    &:hover {
      color: $colorTitle;
    }
  }
  //BLOG
  .col-for-blog {
    width: 33.3%;
    float: left;
  }
}


