jQuery(document).ready(function () {

    /*----------- search-form ------------*/

    $('.search-click').on('click', function () {
        $(this).addClass('open-search-form');
    });
    $(document).on('click', function (event) {
        if (!$(event.target).is("#custom-icon-search, input.search-input")) {
            $('.search-click').removeClass('open-search-form');
        }
    });

    /*----------- navigation ------------*/

    $($('.navigation-link.nav-has-dropdown')).hover(function () {
        var container = $(this).find('.container-level-1');
        if ($(container) && $(container).hasClass('only-one-level')) {
            $(this).toggleClass('small-menu');
        }
    });
    $('.blog-content > p').each(function () {
        if ($(this).text().length > 50)
            $(this).text($(this).text().substring(0, 50) + '...');
    });

    /*------------ collection change view ---------------*/

    $('.btn-change-view-grid').on('click', function () {
         $('#collection-change-view').addClass('change-grid');
    })
    $('.btn-change-view-list').on('click', function () {
             $('#collection-change-view').addClass('change-list');
        })
})
